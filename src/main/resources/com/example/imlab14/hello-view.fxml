<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="263.0" prefWidth="306.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.imlab14.HelloController">
    <Label text="Введите лимит времени:" />
    <TextField fx:id="timeInput" nodeOrientation="LEFT_TO_RIGHT" prefHeight="25.0" prefWidth="278.0" promptText="Введите время" />

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#startButtonClicked" prefHeight="25.0" prefWidth="49.0" text="Старт" />
        <Button onAction="#stopButtonClicked" prefHeight="25.0" prefWidth="48.0" text="Стоп" />
    </HBox>
   <HBox spacing="10">
      <children>
         <Label alignment="CENTER" prefHeight="17.0" prefWidth="70.0" text="Время:" />
         <Label fx:id="timeText" contentDisplay="RIGHT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="17.0" prefWidth="228.0" />
      </children>
   </HBox>
   <HBox spacing="10">
      <children>
         <Label alignment="CENTER" contentDisplay="RIGHT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="17.0" prefWidth="70.0" text="Банк:" />
         <Label fx:id="bankText" contentDisplay="RIGHT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="17.0" prefWidth="228.0" />
      </children>
   </HBox>
   <HBox spacing="10">
      <children>
         <Label alignment="CENTER" prefHeight="17.0" prefWidth="70.0" text="Очередь:" />
         <Label fx:id="arrivalProcessText" contentDisplay="RIGHT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="17.0" prefWidth="228.0" />
      </children>
   </HBox>
</VBox>
